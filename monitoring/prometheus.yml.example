# Prometheus Configuration for Kafka Monitoring
# Copy to prometheus.yml and use with docker-compose.override.yml

global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: 'kafka-production'
    environment: 'prod'

# Alertmanager configuration (optional)
# alerting:
#   alertmanagers:
#     - static_configs:
#         - targets: ['alertmanager:9093']

# Load rules once and periodically evaluate them
rule_files:
  # - "alerts/*.yml"

scrape_configs:
  # Kafka JMX metrics
  - job_name: 'kafka-jmx'
    static_configs:
      - targets: 
          - 'kafka-1:9999'
          - 'kafka-2:9999'
          - 'kafka-3:9999'
        labels:
          cluster: 'kafka-production'
    
  # Node exporter for system metrics (if added)
  # - job_name: 'node-exporter'
  #   static_configs:
  #     - targets: ['node-exporter:9100']

  # Kafka exporter for Kafka-specific metrics (if added)
  # - job_name: 'kafka-exporter'
  #   static_configs:
  #     - targets: ['kafka-exporter:9308']

